<%@page_title = "movies#index"%>
<h1><%=@page_title %></h1>
<%= form_tag :search_movies, method: :get, class: "search" do %>
  <%= text_field_tag "q", params[:q] %>
  <%= submit_tag "検索" %>
<% end %>
<%if @movies.present?%>
<table class="list">
  <thead>
    <tr>
      <th>作品名</th>
      <th>概要</th>
      <th>公開日</th>
      <th>公開終了日</th>
      <th>作品時間</th>
      <th>配給</th>
      <th>監督</th>
    </tr>
  </thead>
  <tbody>
    <%@movies.each do |t|%>
    <tr>
      <td><%=link_to t.title,t%></td>
      <td><%= t.explanation%></td>
      <td><%= t.released_at%></td>
      <td><%= t.expired_at%></td>
      <td><%= t.screening_time%></td>
      <td><%= t.distribution%></td>
      <td><%= t.director%></td>
    </tr>
    <%end%>
  </tbody>
</table>
<%else%>
  <p>現在公開中の作品はありません</p>
<%end%>
