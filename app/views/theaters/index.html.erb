<%@page_title = "theaters#index"%>
<h1><%=@page_title %></h1>
<%if @theaters.present?%>
<table class="list">
  <thead>
    <tr>
      <th>店名</th>
      <th>住所</th>
      <th>問い合わせ先</th>
    </tr>
  </thead>
  <tbody>
    <%@theaters.each do |t|%>
    <tr>
      <td><%=link_to t.store_name,t%></td>
      <td><%=t.address%></td>
      <td><%=t.tel%></td>
    </tr>
    <%end%>
  </tbody>
</table>
<%else%>
  <p>劇場が登録されていません</p>
<%end%>
