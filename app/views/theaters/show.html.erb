<%@page_title = "movie#show"%>
<h1><%=@page_title %></h1>
<h2><%=@theater.store_name%></h2>
<%@movie = []%>
<%@schedules.each_with_index do |s,i|%>
    <%if s.movie.status == 1%>
        <%@movie[i] = s.movie.title%>
    <%end%>
<%end%>
<%@new_movie = @movie.uniq%>
<% p "uniq#{@movie.uniq}"%>
<table class="list">
  <thead>
    <th>作品名</th>
    <th>概要</th>
    <th>公開日</th>
    <th>公開終了日</th>
  </thead>
  <%@new_movie.each do |m|%>
  <tbody>
  <%a = Date.parse("#{Time.current.year}-0#{Time.current.month}-#{Time.current.day}")%>
  <%if Movie.find_by(title:m).released_at < a && a < Movie.find_by(title:m).expired_at%>
    <th><%=link_to m,[@theater,Movie.find_by(title: m)]%></th>
  <%else%>
    <th><%=m%></th>
  <%end%>
    <th><%=Movie.find_by(title: m).explanation%></th>
    <th><%=Movie.find_by(title: m).released_at%></th>
    <th><%=Movie.find_by(title: m).expired_at%></th>
  </tbody>
<%end%>
