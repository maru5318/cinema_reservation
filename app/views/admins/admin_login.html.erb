<%@page_title = "admin_login"%>
<h1><%=@page_title %></h1>

<h2>ログイン</h2>
<% if flash.alert %><p class="alert"><%= flash.alert%></p><%end%>
<%#flashがあった場合は表示する%>
<%= form_tag :admin_session, id: "login_form" do %>
<div>
  <label>ログインID:</label>
  <input type="text" name="login_id">
</div>
<div>
  <label>パスワード:</label>
  <input type="password" name="password">
</div>
<div>
  <input type="submit" value="ログイン">
</div>
<%end%>
<%=link_to"新規会員登録はこちらへ",:new_admin_account%>
</form>