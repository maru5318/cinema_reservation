<% @page_title = "会員管理" %>
<h1><%= @page_title %></h1>

<%= form_tag :search_admin_movies, method: :get, class: "search" do %>
  <%= text_field_tag "q", params[:q] %>
  <%= submit_tag "検索" %>
<% end %>

<div class="toolbar"><%= link_to "会員の新規登録", :new_admin_movie %></div>
<%if @movies.present?%>
<table class="list">
  <thead>
    <tr>
      <th>作品名</th>
      <th>概要</th>
      <th>公開日</th>
      <th>公開終了日</th>
      <th>作品時間</th>
      <th>配給</th>
      <th>監督</th>
      <th>編集</th>
    </tr>
  </thead>
  <tbody>
    <%@movies.each do |t|%>
    <tr>
      <td><%=link_to t.title,t%></td>
      <td><%= t.explanation%></td>
      <td><%= t.released_at%></td>
      <td><%= t.expired_at%></td>
      <td><%= t.screening_time%></td>
      <td><%= t.distribution%></td>
      <td><%= t.director%></td>
      <td>
      <%= link_to "編集",[:edit,:admin, t]%> 
    </tr>
    <%end%>
  </tbody>
</table>
<%else%>
  <p>作品が登録されていません</p>
<%end%>